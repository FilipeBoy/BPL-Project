@model BPL_Project.Models.Atividade

@{
    ViewBag.Title = "Delete";
}

<div class="form-style-10">
    <h2>Atividade<span>Deseja realmente excluir esta atividade?</span></h2>
    <h4 class="text-danger">@ViewData["Message"]</h4>
    <div class="section">Descrição</div>
    <div class="inner-wrap">
        @Html.DisplayFor(model => model.Descricao)
    </div>
    <div class="section">Data de Execução</div>
    <div class="inner-wrap">
        @Html.DisplayFor(model => model.Data_Exec, "{0:dd/MM/yyyy}")
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="button-section">
            <input type="submit" value="Excluir" class="btn btn-default w3-blue w3-hover-blue w3-left" />
            <input type="button" class="btn btn-default w3-red w3-hover-red w3-right" style="border-color:#b94a48!important" value="Cancelar" onClick="history.go(-1)">
        </div>
    }
    
</div>

