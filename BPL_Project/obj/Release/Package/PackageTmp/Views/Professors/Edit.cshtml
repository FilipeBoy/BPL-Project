@model BPL_Project.Models.Professor

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-style-10">
        <h2>Dados do professor<span>Altere os dados do professor!</span></h2>
        <h4 class="text-danger">@ViewData["Message"]</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Prof_Id)
        <div class="section"><span>1</span>Curso</div>
        <div class="inner-wrap">
            @Html.DropDownList("Curso_Id", null, htmlAttributes: new { @class = "form-control w3-input" })
            @Html.ValidationMessageFor(model => model.Curso_Id, "", new { @class = "text-danger" })
        </div>
        <div class="section"><span>2</span>Nome</div>
        <div class="inner-wrap">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control w3-input" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
        <div class="section"><span>3</span>Email &amp; Senha</div>
        <div class="inner-wrap">
            <label>
                Email
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control w3-input" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </label>
            <label>
                Senha
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control w3-input" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </label>
        </div>
        <div class="button-section">
            <input type="submit" value="Alterar" class="btn btn-default w3-blue w3-hover-blue w3-left" />
            <input type="button" class="btn btn-default w3-red w3-hover-red w3-right" style="border-color:#b94a48!important" value="Cancelar" onClick="history.go(-1)">
            @*@if (Session["User"] != null)
            {
                <a href="/Professors/Index" class="btn btn-default w3-red w3-hover-red w3-right">Cancelar</a>
            }
            else
            {
                <a href="/Professors/Datails" class="btn btn-default w3-red w3-hover-red w3-right">Cancelar</a>
            }*@
        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
