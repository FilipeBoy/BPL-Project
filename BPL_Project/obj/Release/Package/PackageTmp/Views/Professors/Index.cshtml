@model IEnumerable<BPL_Project.Models.Professor>

@{
    ViewBag.Title = "Index";
}
<section class="w3-centro" style="width:80%;min-width:800px">
    @Html.ActionLink("Novo professor", "Create", new { }, htmlAttributes: new { @class = "btn btn-default w3-blue w3-hover-blue w3-right" })
    <h2 class="w3-center">Lista de Professores</h2>
    <h4 class="text-danger">@ViewData["Message"]</h4>
    <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>
                        <span>&emsp;</span>Curso
                    </th>
                    <th>
                        Nome
                    </th>
                    <th>
                        Email
                    </th>
                    <th><span>&emsp;</span></th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span>&emsp;</span>@Html.DisplayFor(modelItem => item.Curso.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink("Trocar Senha", "../Users/MudaSenha", new { id = item.Prof_Id }, htmlAttributes: new { @class = "btn btn-default w3-blue w3-hover-blue",@style="margin-top:5px" })<span>&emsp;</span>
                             @Html.ActionLink("Excluir", "Delete", new { id = item.Prof_Id }, htmlAttributes: new { @class = "btn btn-default w3-red w3-hover-red", @style = "margin-top:5px" })<span>&emsp;</span>
                        </td>
                      </tr>
                }
            </tbody>
        </table>
    </div>
</section>


