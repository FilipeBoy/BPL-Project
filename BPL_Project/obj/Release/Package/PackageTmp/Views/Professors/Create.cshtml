@model BPL_Project.Models.Professor

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-style-6">
        <h2>Cadastro de professor</h2>
        <h4 class="text-danger">@TempData["Message"]</h4>
        <h4 class="text-danger">@ViewData["Message"]</h4>
        <span class="text-info">* Todos os itens são obrigatórios</span>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="section"><span>1</span>Curso</div>
        <div class="inner-wrap">
            @Html.DropDownList("Curso_Id",null, htmlAttributes: new { @class = "form-control w3-input" })
            @Html.ValidationMessageFor(model => model.Curso_Id, "", new { @class = "text-danger" })
        </div>
        <div class="section"><span>2</span>Nome</div>
        <div class="inner-wrap">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control w3-input", placeholder = "Nome completo" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
        <div class="section"><span>3</span>Email &amp; Senha</div>
        <div class="inner-wrap">
            <label>
                Email
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control w3-input", placeholder = "xxx@xxx.com" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </label>
            <label>
                Senha
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control w3-input", placeholder = "*****" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </label>
        </div>
        <div class="button-section">
            <input type="submit" value="Cadastrar" class="btn btn-default w3-blue w3-hover-blue w3-left" />
            <a href="../Professors/Index" class="btn btn-default w3-red w3-hover-red w3-right" style="border-color:#b94a48!important">Cancelar</a>
        </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
