@model IEnumerable<BPL_Project.Models.Curso>

@{
    ViewBag.Title = "Index";
}
<section class="w3-centro" style="width:500px;min-width:400px">
    @Html.ActionLink("Novo curso", "Create", new { }, htmlAttributes: new { @class = "btn btn-default w3-blue w3-hover-blue w3-right" })
    
    <h2 class="w3-center">Lista de cursos </h2>
    <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>
                        <span>&emsp;</span>@Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span>&emsp;</span>@Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td class="w3-right">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Curso_Id }, htmlAttributes: new { @class = "btn btn-default w3-blue w3-hover-blue ", @style = "margin-top:5px" }) <span>&emsp;</span>
                            @Html.ActionLink("Excluir", "Delete", new { id = item.Curso_Id }, htmlAttributes: new { @class = "btn btn-default w3-red w3-hover-red ", @style = "margin-top:5px" }) <span>&emsp;</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>


@section Scripts {
    <script type="text/javascript">
    // '.tbl-content' consumed little space for vertical scrollbar, scrollbar width depend on browser/os/platfrom. Here calculate the scollbar width .
    $(window).on("load resize ", function () {
        var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
        $('.tbl-header').css({ 'padding-right': scrollWidth });
    }).resize();
    </script>
    }
