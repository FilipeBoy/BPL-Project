@model BPL_Project.Models.Prof_Convidado

@{
    ViewBag.Title = "Delete";
}

<div class="form-style-10">
    <h2>Convidado<span>Deseja realmente excluir este convidado?</span></h2>
    <h4 class="text-danger">@ViewData["Message"]</h4>
    <div class="section"><span>1</span>Professor</div>
    <div class="inner-wrap">
        @Html.DisplayFor(model => model.Professor.Nome)
    </div>
    <div class="section"><span>2</span>Nível de permissão</div>
    <div class="inner-wrap">
        @Html.DisplayFor(model => model.Permissao)
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="button-section">
            <input type="submit" value="Excluir" class="btn btn-default w3-blue w3-hover-blue w3-left" />
            <input type="button" class="btn btn-default w3-red w3-hover-red w3-right" style="border-color:#b94a48!important" value="Cancelar" onClick="history.go(-1)">
        </div>
    }

</div>

