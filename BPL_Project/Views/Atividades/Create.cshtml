@model BPL_Project.Models.Atividade

@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-style-10">
        <h2>Cadastro de Atividade<span>Descreva a atividade que deve ser executada!</span></h2>
        <h4 class="text-danger">@TempData["Message"]</h4>
        <h4 class="text-danger">@ViewData["Message"]</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="section">Descrição</div>
            <div class="inner-wrap">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control w3-input", placeholder = "Descreva aqui" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
            <div class="section">Data de Execução</div>
            <div class="inner-wrap">
                @Html.EditorFor(model => model.Data_Exec, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Data_Exec, "", new { @class = "text-danger" })
                <span class="text-danger">@ViewData["data_tranca"]</span>
            </div>
        <div class="button-section">
            <input type="submit" value="Cadastrar" class="btn btn-default w3-blue w3-hover-blue w3-left" />
            <a href="../Trabalhoes/ViewTrabalho1" class="btn btn-default w3-red w3-hover-red w3-right" style="border-color:#b94a48!important">Cancelar</a>
        </div>
    </div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
