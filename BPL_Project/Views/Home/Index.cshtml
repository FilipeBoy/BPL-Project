@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<title>Portal ABP - Faculdade Dom Bosco</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="~/Content/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<style>
    body, h1 {
        font-family: "Raleway", sans-serif;
    }

    body, html {
        height: 100%;
    }

    .bgimg {
        background-image: url('/Image/estudantes.jpg');
        min-height: 100%;
        background-position: center;
        background-size: cover;
    }
</style>
<body>

    <div class="bgimg w3-display-container w3-animate-opacity w3-text-white">
        <div class="w3-display-top w3-padding-large w3-xlarge">
            <img alt="image" class="img w3-left" src="~/Image/logo-faculdade-dom-bosco.png" style="width:15%" />
            <img alt="image" class="img w3-right" src="~/Image/NAeIP.png" style="width:15%" />
        </div>
        <div class="w3-display-middle">
            <header class="w3-center w3-margin-bottom">
                <img class="w3-image" src="~/Image/logo-ABP2.jpg" style="width:50%">
                <h2 class="w3-text-red" style="font-size:40px"><b>Aprendizagem Baseada em Problemas</b></h2>
                <p><a href="/Users/Login" class="w3-button w3-padding-large w3-large w3-margin-top w3-hover-opacity-off">Iniciar as atividades</a></p>
            </header>

        </div>
        
        <div class="w3-display-bottomleft w3-padding-large">
            <p class="w3-text-black">&copy; @DateTime.Now.Year - Faculdade Dom Bosco</p>
        </div>
    </div>

</body>
</html>




    
    
