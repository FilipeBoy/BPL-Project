
@{
    ViewBag.Title = "Inicio";
}
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            window.location.href = '#foo';
        });
    </script>
}

@if (Session["prof"] == null)
    {
<div class="w3-display-container w3-content w3-wide" style="max-width:1500px" id="home">
    <a href="#" id="foo"></a>
    <img class="w3-image" src="~/Image/banner2.jpg" alt="Architecture" width="1500" height="800">
    <div class="w3-display-middle w3-margin-top w3-center">
        <h2 class="w3-text-white w3-jumbo w3-hide-small"><b>Olá @Session["Name"].ToString()!</b></h2>
    </div>
</div>
    }
    else
    {
<div class="w3-display-container w3-content w3-wide" style="max-width:1500px" id="home">
    <a href="#" id="foo"></a>
    <img class="w3-image" src="~/Image/banner4.jpg" alt="Architecture" width="1500" height="800">
    <div class="w3-display-middle w3-center w3-margin-bottom">
        <h2 class="w3-text-blue w3-jumbo w3-hide-small"><b>Olá @Session["Name"].ToString()!</b></h2>
        <p><a href="/Trabalhoes/Create" class="w3-button w3-blue w3-padding-large w3-large w3-margin-top w3-hover-opacity-off">Criar novo Trabalho</a></p>
    </div>
</div>
    }
